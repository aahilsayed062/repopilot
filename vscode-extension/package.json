{
    "name": "repopilot",
    "displayName": "RepoPilot AI",
    "description": "Repository-grounded AI coding assistant with citations and code generation",
    "version": "1.0.0",
    "publisher": "repopilot",
    "repository": {
        "type": "git",
        "url": "https://github.com/repopilot/vscode-extension"
    },
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Programming Languages",
        "Machine Learning",
        "Other"
    ],
    "keywords": [
        "ai",
        "copilot",
        "code generation",
        "repository",
        "grounded"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./dist/extension.js",
    "icon": "media/icon.png",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "repopilot",
                    "title": "RepoPilot AI",
                    "icon": "media/icon_activity.svg"
                }
            ]
        },
        "views": {
            "repopilot": [
                {
                    "type": "webview",
                    "id": "repopilot.chatView",
                    "name": "Chat"
                }
            ]
        },
        "commands": [
            {
                "command": "repopilot.openChat",
                "title": "Open Chat",
                "category": "RepoPilot"
            },
            {
                "command": "repopilot.indexWorkspace",
                "title": "Index Workspace",
                "category": "RepoPilot"
            },
            {
                "command": "repopilot.askAboutSelection",
                "title": "Ask RepoPilot About Selection",
                "category": "RepoPilot"
            },
            {
                "command": "repopilot.explainSelection",
                "title": "Explain Selection",
                "category": "RepoPilot"
            },
            {
                "command": "repopilot.generateFromPrompt",
                "title": "Generate Code",
                "category": "RepoPilot"
            },
            {
                "command": "repopilot.startBackend",
                "title": "Start Backend",
                "category": "RepoPilot"
            },
            {
                "command": "repopilot.exportChat",
                "title": "Export Chat History",
                "category": "RepoPilot"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "repopilot.askAboutSelection",
                    "when": "editorHasSelection",
                    "group": "repopilot@1"
                },
                {
                    "command": "repopilot.explainSelection",
                    "when": "editorHasSelection",
                    "group": "repopilot@2"
                }
            ],
            "commandPalette": [
                {
                    "command": "repopilot.askAboutSelection",
                    "when": "editorHasSelection"
                },
                {
                    "command": "repopilot.explainSelection",
                    "when": "editorHasSelection"
                }
            ]
        },
        "keybindings": [
            {
                "command": "repopilot.openChat",
                "key": "ctrl+shift+r",
                "mac": "cmd+shift+r"
            },
            {
                "command": "repopilot.askAboutSelection",
                "key": "ctrl+shift+a",
                "mac": "cmd+shift+a",
                "when": "editorHasSelection"
            }
        ],
        "configuration": {
            "title": "RepoPilot AI",
            "properties": {
                "repopilot.backendUrl": {
                    "type": "string",
                    "default": "http://localhost:8000",
                    "description": "URL of the RepoPilot backend server"
                },
                "repopilot.autoIndexOnOpen": {
                    "type": "boolean",
                    "default": true,
                    "description": "Automatically index workspace when opening"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "lint": "eslint src"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "@types/vscode": "^1.85.0",
        "@typescript-eslint/eslint-plugin": "^6.13.0",
        "@typescript-eslint/parser": "^6.13.0",
        "eslint": "^8.54.0",
        "ts-loader": "^9.5.1",
        "typescript": "^5.3.2",
        "webpack": "^5.89.0",
        "webpack-cli": "^5.1.4"
    },
    "dependencies": {
        "node-fetch": "^2.7.0"
    }
}
