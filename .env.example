# RepoPilot AI Configuration
# Copy this to .env and fill in your values

# OpenAI API Key (leave empty to use mock embeddings)
OPENAI_API_KEY=

# OpenAI Models
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002
OPENAI_CHAT_MODEL=gpt-4o

# Data directory for cloned repos and indexes
DATA_DIR=data

# Debug mode (enables verbose logging)
DEBUG=false

# Server settings
HOST=0.0.0.0
PORT=8000
