# =============================================================================
# RepoPilot AI - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your API keys
# =============================================================================

# Server Settings
HOST=0.0.0.0
PORT=8000
DEBUG=true
CLONE_TIMEOUT_SECONDS=900
INDEX_BATCH_SIZE=250
FILE_READ_CONCURRENCY=32
INDEX_MAX_FILES=900
INDEX_MAX_FILE_SIZE_KB=256
INDEX_MAX_TOTAL_MB=20
INDEX_MAX_CHUNKS=2500
INDEX_TIME_BUDGET_SECONDS=55
USE_PERSISTENT_INDEX=false

# Repo limits
MAX_REPO_SIZE_MB=512
MAX_FILES=10000

# -----------------------------------------------------------------------------
# Embeddings: Google Gemini (FREE - Recommended)
# Get your key: https://aistudio.google.com/apikey
# -----------------------------------------------------------------------------
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_EMBEDDING_MODEL=models/gemini-embedding-001
GEMINI_CHAT_MODEL=gemini-2.0-flash

# -----------------------------------------------------------------------------
# Chat LLM: Groq (FREE - Super fast)
# Get your key: https://console.groq.com
# -----------------------------------------------------------------------------
OPENAI_API_KEY=your_groq_api_key_here
OPENAI_BASE_URL=https://api.groq.com/openai/v1
OPENAI_CHAT_MODEL=llama-3.3-70b-versatile

# Data Directory
DATA_DIR=data
