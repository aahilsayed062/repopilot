# RepoPilot AI - Environment Variables
# Copy this file to .env and fill in your API keys.
# At minimum, set ONE of the API key pairs below.

# ============================================================
# LLM Provider (choose at least one)
# ============================================================

# Option 1: Groq (free tier, recommended for chat)
# Sign up at https://console.groq.com and get an API key
OPENAI_API_KEY=your_groq_api_key_here
OPENAI_BASE_URL=https://api.groq.com/openai/v1

# Option 2: Google Gemini (free tier, used for embeddings + fallback)
# Get a key from https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ============================================================
# Server Settings
# ============================================================
PORT=8000
DEBUG=false

# ============================================================
# Repository Limits
# ============================================================
MAX_REPO_SIZE_MB=512
MAX_FILES=10000
CLONE_TIMEOUT_SECONDS=900

# ============================================================
# Indexing Performance
# ============================================================
INDEX_BATCH_SIZE=250
INDEX_MAX_FILES=900
INDEX_MAX_FILE_SIZE_KB=256
INDEX_MAX_TOTAL_MB=20
INDEX_MAX_CHUNKS=2500
INDEX_TIME_BUDGET_SECONDS=55
