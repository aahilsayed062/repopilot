# RepoPilot Website — Environment Variables
# Copy this file to .env and add your Gemini API key.

# ============================================================
# Google Gemini (FREE tier — 15 RPM / 1M tokens per minute)
# Get a key from https://aistudio.google.com/app/apikey
# ============================================================
GEMINI_API_KEY=your_gemini_api_key_here

# ============================================================
# Server Settings
# ============================================================
PORT=8001
DEBUG=false

# ============================================================
# Repository Limits
# ============================================================
MAX_REPO_SIZE_MB=250
CLONE_TIMEOUT_SECONDS=60
MAX_ANALYSES_PER_HOUR=10
